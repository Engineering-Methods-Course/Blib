<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.RegisterMemberFrameController">
    <!-- Title Section centered -->
    <HBox alignment="CENTER" prefHeight="167.0" prefWidth="1280.0">
      <children>
          <Label alignment="CENTER" layoutX="560.0" layoutY="158.0" style="-fx-font-size: 36px; -fx-font-weight: bold;" text="REGISTER MEMBER" />
      </children>
    </HBox>

    <!-- Each Label + TextField + Error in its own row -->
    <VBox alignment="CENTER" prefWidth="1280.0" spacing="20.0">

        <!-- Username Row -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Username:" />
            <TextField fx:id="txtUsername" prefWidth="200.0" />
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="lblUserNameError" prefHeight="23.0" prefWidth="500.0" text="UserName Error" visible="false">
            <HBox.margin>
               <Insets left="275.0" />
            </HBox.margin></Label>
        </HBox>

        <!-- Name Row -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Name:" />
            <TextField fx:id="txtFirstName" prefWidth="200.0" />
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="lblNameError" prefHeight="23.0" prefWidth="500.0" text="Name Error" visible="false">
            <HBox.margin>
               <Insets left="275.0" />
            </HBox.margin></Label>
        </HBox>

        <!-- Last Name Row -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Last Name:" />
            <TextField fx:id="txtLastName" prefWidth="200.0" />
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="lblLastNameError" prefHeight="23.0" prefWidth="500.0" text="Last Name Error" visible="false">
            <HBox.margin>
               <Insets left="275.0" />
            </HBox.margin></Label>
        </HBox>

        <!-- Phone Row -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Phone:" />
            <TextField fx:id="txtPhone" prefWidth="200.0" />
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="lblPhoneError" prefHeight="23.0" prefWidth="500.0" text="Phone Error" visible="false">
            <HBox.margin>
               <Insets left="275.0" />
            </HBox.margin></Label>
        </HBox>

        <!-- Email Row -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Email:" />
            <TextField fx:id="txtEmail" prefWidth="200.0" />
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="lblEmailError" prefHeight="23.0" prefWidth="500.0" text="Email Error" visible="false">
            <HBox.margin>
               <Insets left="275.0" />
            </HBox.margin></Label>
        </HBox>

        <!-- Register Button Row -->
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#clickRegisterButton" prefHeight="50.0" prefWidth="200.0" text="Register" />
        </HBox>

    </VBox>

    <!-- Spacer to push the "Back" button to the bottom -->
    <Region VBox.vgrow="ALWAYS" />
</VBox>
