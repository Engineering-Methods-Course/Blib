            <Label prefHeight="40.0" prefWidth="150.0" text="First Name:">
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resources/name.png" />
                  </image>
               </ImageView>
            </graphic></Label>
            <TextField fx:id="txtFirstName" prefWidth="200.0" />
        </HBox>
      <Label fx:id="lblFirstNameError" text="First Name Error" visible="false" />
        <HBox alignment="CENTER" spacing="10.0">
            <Label prefHeight="40.0" prefWidth="150.0" text="Last Name:">
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resources/name.png" />
                  </image>
               </ImageView>
            </graphic></Label>
            <TextField fx:id="txtLastName" prefWidth="200.0" />
        </HBox>
      <Label fx:id="lblLastNameError" text="Last name error" visible="false" />
        <!-- Phone -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label prefHeight="40.0" prefWidth="150.0" text="Phone:">
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resources/phone.png" />
                  </image>
               </ImageView>
            </graphic></Label>
            <TextField fx:id="txtPhone" prefWidth="200.0" />
        </HBox>
      <Label fx:id="lblPhoneError" text="phone Error" visible="false" />

        <!-- Email -->
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="948.0" spacing="10.0">
            <Label prefHeight="40.0" prefWidth="150.0" text="Email:">
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resources/email.png" />
                  </image>
               </ImageView>
            </graphic></Label>
            <TextField fx:id="txtEmail" prefWidth="200.0" />
        </HBox>
    </VBox>
   <Label fx:id="lblEmailError" text="Email Error" visible="false" />

    <!-- Update Button -->
    <Button onAction="#clickUpdateButton" prefHeight="50.0" prefWidth="138.0" text="Update" />

    <!-- Spacer to push the "Back" button to the bottom -->
    <Region prefHeight="0.0" prefWidth="1280.0" VBox.vgrow="ALWAYS" />
</VBox>
