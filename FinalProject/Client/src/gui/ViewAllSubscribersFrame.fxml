<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="allSubscribersFrame" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.ViewAllSubscribersFrameController">
    <!-- Title for All Subscribers -->
    <Label layoutX="550.0" layoutY="34.0" prefHeight="50.0" prefWidth="180.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" text="All Subscribers" textAlignment="CENTER"
           AnchorPane.leftAnchor="550.0" AnchorPane.rightAnchor="550.0">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <!-- Top section for Filter with TextField and Search button -->
    <VBox alignment="CENTER" layoutX="26.0" layoutY="70.0" prefHeight="100.0" prefWidth="1240.0" spacing="10.0"
          AnchorPane.topAnchor="70.0">
        <HBox spacing="10.0">
            <Label text="Search by ID:"/>
            <TextField fx:id="filterTextField" prefWidth="150.0" promptText="Enter ID"/>
            <Button fx:id="filterButton" onAction="#onFilterButtonClicked" text="Search"/>
        </HBox>
    </VBox>

    <!-- TableView to display subscribers -->
    <TableView fx:id="subscribersTable" layoutX="20.0" layoutY="149.0" prefHeight="588.0" prefWidth="1240.0"
               AnchorPane.bottomAnchor="63.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID"/>
            <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="First Name"/>
            <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Last Name"/>
            <TableColumn fx:id="phoneNumberColumn" prefWidth="216.0" text="Phone Number"/>
            <TableColumn fx:id="emailColumn" prefWidth="426.0" text="Email"/>
            <TableColumn fx:id="statusColumn" prefWidth="111.0" text="Account Frozen"/>

            <!-- Adding the "Watch Profile" button column -->
            <TableColumn fx:id="watchProfileColumn" prefWidth="86.0" text="Watch Profile">
                <cellValueFactory>
                    <PropertyValueFactory property="watchProfileButton"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</AnchorPane>
