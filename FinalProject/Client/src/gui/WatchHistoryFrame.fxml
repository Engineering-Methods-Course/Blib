<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1087.0" prefWidth="1677.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.WatchHistorySceneController" stylesheets="@/gui/MainFrame.css">
    <!-- Title -->
    <Label alignment="CENTER" styleClass="title" text="HISTORY" />
    <!-- Remove Region and use AnchorPane to control position -->
    <AnchorPane prefHeight="855.0" prefWidth="1600.0">
        <TableView fx:id="historyTable" maxHeight="800.0" maxWidth="1600.0" prefHeight="800.0" prefWidth="1600.0" styleClass="table">
            <columns>
                <TableColumn fx:id="dateColumn" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" resizable="false" text="Date" styleClass="table-column-center" />
                <TableColumn fx:id="actionTypeColumn" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" resizable="false" text="Action" styleClass="table-column-center" />
                <TableColumn fx:id="descriptionColumn" maxWidth="1100.0" minWidth="1100.0" prefWidth="1100.0" resizable="false" text="Description" styleClass="table-column-right" />
            </columns>
        </TableView>
    </AnchorPane>
</VBox>