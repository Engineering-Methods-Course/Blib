<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.ClientIPFrameController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <!-- Centered VBox for IP, Port, and Enter Button -->
        <VBox alignment="CENTER" spacing="20.0" prefWidth="600.0" prefHeight="400.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="40.0">
            <!-- IP Field -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="IP Address:" prefWidth="100.0"/>
                <TextField fx:id="txtIP" prefWidth="200.0"/>
            </HBox>

            <!-- Port Field -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Port:" prefWidth="100.0"/>
                <TextField fx:id="txtPort" prefWidth="200.0"/>
            </HBox>

            <!-- Enter Button -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button text="Enter" onAction="#clickEnterButton" prefWidth="100.0"/>
            </HBox>
        </VBox>

        <!-- Exit Button at Bottom-Left -->
        <Button text="Exit" onAction="#clickExitButton" prefWidth="100.0" AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="10.0"/>
    </children>
</AnchorPane>
