<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="logic.ViewAllSubscribersFrameController">
    <children>
        <!-- Title for All Subscribers -->
        <Label layoutX="550.0" layoutY="34.0" prefHeight="50.0" prefWidth="180.0"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" text="All Subscribers" textAlignment="CENTER"
               AnchorPane.leftAnchor="550.0" AnchorPane.rightAnchor="550.0">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>

        <!-- Top section for Filter with TextField and Search button -->
        <VBox alignment="CENTER" layoutX="26.0" layoutY="70.0" prefHeight="100.0" prefWidth="1240.0" spacing="10.0"
              AnchorPane.topAnchor="70.0">
            <HBox spacing="10.0">
                <Label text="Search by ID:"/>
                <TextField fx:id="filterTextField" prefWidth="150.0" promptText="Enter ID"/>
                <Button fx:id="filterButton" onAction="#onFilterButtonClicked" text="Search"/>
            </HBox>
        </VBox>

        <!-- todo: add button: view profile -->

        <!-- TableView to display subscribers -->
        <TableView fx:id="subscribersTable" layoutX="20.0" layoutY="149.0" prefHeight="588.0" prefWidth="1240.0"
                   AnchorPane.bottomAnchor="63.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID"/>
                <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="First Name"/>
                <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Last Name"/>
                <TableColumn fx:id="phoneNumberColumn" prefWidth="150.0" text="Phone Number"/>
                <TableColumn fx:id="emailColumn" prefWidth="172.0" text="Email"/>
                <TableColumn fx:id="passwordColumn" prefWidth="128.0" text="Password"/>
                <TableColumn fx:id="statusColumn" prefWidth="168.0" text="Status"/>
                <TableColumn fx:id="historyColumn" prefWidth="165.0" text="History"/>

                <!-- Adding the "Watch Profile" button column -->
                <TableColumn fx:id="watchProfileColumn" prefWidth="195.0" text="Watch Profile">
                    <cellValueFactory>
                        <PropertyValueFactory property="watchProfileButton"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <!-- Back button in the left corner -->
        <Button fx:id="backButton" layoutX="20.0" layoutY="560.0" onAction="#backButtonClicked" text="Back"
                AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"/>
    </children>
</AnchorPane>
